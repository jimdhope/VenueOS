generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Venue {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  spaces    Space[]
}

model Space {
  id        String   @id @default(uuid())
  name      String
  venueId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  screens   Screen[]
  venue     Venue    @relation(fields: [venueId], references: [id])
}

model Screen {
  id          String    @id @default(uuid())
  name        String
  spaceId     String
  playlistId  String?
  timecodeId  String?
  matrixRow   Int?
  matrixCol   Int?
  resolution  String?
  orientation String    @default("LANDSCAPE")
  status      String    @default("OFFLINE")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  playlist    Playlist? @relation(fields: [playlistId], references: [id], onDelete: SetNull)
  timecode    Timecode? @relation(fields: [timecodeId], references: [id], onDelete: SetNull)
  space       Space     @relation(fields: [spaceId], references: [id])
  schedules   Schedule[]
}

model Timecode {
  id        String   @id @default(uuid())
  name      String
  startedAt DateTime @default(now())
  speed     Float    @default(1.0)
  isRunning Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  screens   Screen[]
}

model Content {
  id        String          @id @default(uuid())
  name      String
  type      String
  url       String?
  body      String?
  duration  Int             @default(10)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  data      String?
  entries   PlaylistEntry[]
}

model Playlist {
  id        String          @id @default(uuid())
  name      String
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  entries   PlaylistEntry[]
  screens   Screen[]
  schedules Schedule[]
}

model PlaylistEntry {
  id         String   @id @default(uuid())
  playlistId String
  contentId  String
  order      Int
  duration   Int?
  content    Content  @relation(fields: [contentId], references: [id])
  playlist   Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)
}

model Schedule {
  id        String    @id @default(uuid())
  screenId  String
  playlistId String
  priority  Int       @default(0)
  startDate DateTime?
  endDate   DateTime?
  startTime String?   // Format: "HH:mm" 24h
  endTime   String?   // Format: "HH:mm" 24h
  daysOfWeek String?  // Format: "0,1,2,3,4,5,6" (comma separated ints)
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  screen    Screen    @relation(fields: [screenId], references: [id], onDelete: Cascade)
  playlist  Playlist  @relation(fields: [playlistId], references: [id], onDelete: Cascade)
}
